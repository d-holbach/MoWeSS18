include ../includes/header.pug
main
  h1 Login
  form(action="/auth/login", method="post")
    input(type="email", name="mail", id="loginMail", placeholder="E-Mail", required)
    input(type="password", name="password", id="loginPW" placeholder="Password", required, autocomplete="current-password")
    input(type="submit", value="Login")
    input(type="reset", value="Reset")
  a(href="/auth/register") Register
include ../includes/footer.pug